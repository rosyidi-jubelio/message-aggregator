{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "_build",
    "baseUrl": "src",
    "rootDir": ".",
    "paths": {
      "@/*": ["*"],
      "@root/*": ["../*"],
      "@lib/*": ["./lib/*"],
      "@lib2/*": ["./lib2/*"],
      "@modules/*": ["./modules/*"]
    }
  }
}
